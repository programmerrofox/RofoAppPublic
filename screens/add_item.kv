
<Add_Item>:
    MDScreen:
		MDFloatLayout:
			md_bg_color: 1, 1, 1, 1
			Image:
				source: "images/login.jpg"
				pos_hint: {"center_x": .5, "center_y": .80}
			MDLabel:
				text: "l o g i n !"
				#font_name: "Bpoppins"
				font_size: "23sp"
				pos_hint: {"center_y": .60}
				halign: "center"
				color:get_color_from_hex('002a4c')
				#color: rgba(34, 34, 34, 255)
			MDFloatLayout:
				size_hint: .85, .08
				pos_hint: {"center_x": .5, "center_y": .50}
				MDLabel:
					text: "username"
					font_name: "font/Roboto-Bold.ttf"
					color:get_color_from_hex('002a4c')
					font_size: "14sp"
					pos_hint: {"center_x": .5, "center_y": .9}

				TextInput:
					id:username_field
					mode: "rectangle"
					font_name:'arial.ttf'
					size_hint_y: .99
					pos_hint: {"center_x": .5, "center_y": .4}
					background_color: 0, 0, 0, 0
					cursor_color: 0, 0, 0, 1
					cursor_width: "2sp"
					foreground_color: 120/255, 120/255, 120/255, 1
					font_size: "17sp"
					multiline: False
					padding: 10
					required: True
					helper_text_mode: "on_error"
					helper_text: "Enter Password"
